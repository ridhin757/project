<odoo>
  <data>
    <record model="ir.actions.act_window" id="hotel_action_reception">
        <field name="name">Accommodation</field>
        <field name="res_model">hotel.booking</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state', '!=', 'cancel')]</field>
         <field name="context">{'search_default_current checkout':1}</field>
    </record>
       <record model="ir.actions.act_window" id="hotel_action_facility">
        <field name="name">Facilities</field>
        <field name="res_model">hotel.facility</field>
        <field name="view_mode">tree,form</field>
    </record>
      <record model="ir.actions.act_window" id="hotel_action_order_food">
        <field name="name">Order Food</field>
        <field name="res_model">hotel.order</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
      <record model="ir.actions.act_window" id="hotel_action_booking_invoice">
        <field name="name">Booking Invoice</field>
        <field name="res_model">hotel.booking.invoice</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
       <record model="ir.actions.act_window" id="hotel_action_food_category">
        <field name="name">Order Food</field>
        <field name="res_model">hotel.food.category</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
      <record model="ir.actions.act_window" id="hotel_action_hotel_food">
        <field name="name">Food Item</field>
        <field name="res_model">hotel.food</field>
        <field name="view_mode">tree,kanban,form</field>
      </record>
      <record model="ir.actions.act_window" id="hotel_action_guest">
        <field name="name">Guests</field>
        <field name="res_model">hotel.guests</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="hotel_action_room">
        <field name="name">Room</field>
        <field name="res_model">hotel.room</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_available':1}</field>
    </record>
    <record id="sequence_self_service" model="ir.sequence">
        <field name="name">Self Service</field>
        <field name="code">hotel.booking</field>
        <field name="active">TRUE</field>
        <field name="prefix">HM/ROOM/</field>
        <field name="padding">4</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>
      <record id="sequence_self_service_invoice" model="ir.sequence">
        <field name="name">Self Service</field>
        <field name="code">hotel.booking.invoice</field>
        <field name="active">TRUE</field>
        <field name="prefix">HM/ROOM/INV/</field>
        <field name="padding">4</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>

    <menuitem name="Hotel" id="hotel_main_menu"/>
    <menuitem name="Reception" id="hotel_reception" parent="hotel_main_menu"/>
    <menuitem name="Accommodation" id="hotel_menu_accommodation" parent="hotel_reception"
              action="hotel_action_reception"/>
      <menuitem name="Invoice" id="hotel_invoice" parent="hotel_reception"
              action="hotel_action_booking_invoice"/>
    <menuitem name="Order Food" id="hotel_order_food" parent="hotel_main_menu"/>
    <menuitem name="Configuration" id="hotel_configuration" parent="hotel_main_menu"/>



      <menuitem name="Facilities" id="hotel_menu_facilities" parent="hotel_configuration"
              action="hotel_action_facility"/>
    <menuitem name="Room" id="hotel_menu_room" parent="hotel_configuration"
              action="hotel_action_room"/>
    <menuitem name="Guest" id="hotel_menu_guest" parent="hotel_configuration"
              action="hotel_action_guest"/>
       <menuitem name="Category" id="hotel_menu_category" parent="hotel_configuration"
              action="hotel_action_food_category"/>

      <menuitem name="Order Food" id="hotel_order_food_list" parent="hotel_order_food" action="hotel_action_order_food"/>
      <menuitem name="Food Items" id="hotel_order_food_items" parent="hotel_order_food" action="hotel_action_hotel_food"/>



  </data>
</odoo>